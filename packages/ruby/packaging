#!/bin/bash
set -eux

tar xzf ruby-2.4.1.tar.gz
pushd ruby-2.4.1
  LDFLAGS="-Wl,-rpath -Wl,$BOSH_INSTALL_TARGET" ./configure --prefix="$BOSH_INSTALL_TARGET" --disable-install-doc --with-opt-dir="$BOSH_INSTALL_TARGET"
  make
  make install
popd

tar xzf rubygems-2.6.12.tgz
pushd rubygems-2.6.12
  "$BOSH_INSTALL_TARGET"/bin/ruby setup.rb
popd

"$BOSH_INSTALL_TARGET"/bin/gem install ./*.gem --local --no-ri --no-rdoc
